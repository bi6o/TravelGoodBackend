<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8"/>
        <title>
            {% block title %}Travel Good Backend{% endblock %}
        </title>
        {% block stylesheets %}
            <link href="{{ asset('styles/main.css') }}" type="text/css" rel="stylesheet"/>
            <link rel="stylesheet" href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.min.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    </head>
    <body>
        <div id="container" class="row">

            <div id="header" class="col-xs-12 text-center">
                <h1 id="title">
                    Travel Good
                </h1>
                <p id="title-label">
                    Admin Page
                </p>
                {% if app.user %}
                    <div id="nav">
                        <a href="{{ path('main_backend_homepage') }}">Home</a>
                        <a href="{{ path('admin_customers_index') }}">Manage customers</a>
                        <a href="{{ path('admin_customer_city_index') }}">Manage added cities</a>
                        <a href="{{ path('admin_users_index') }}">System users</a>
                        <a href="{{ path('logout') }}">Logout</a>
                    </div>
                {% endif %}
            </div>

            <div id="body" class="col-xs-12">
                {% block body %}{% endblock %}
            </div>
            {% block javascripts %}{% endblock %}
        </div>
    </body>
</html>
