{% extends 'base.html.twig' %}

{% block body %}
    <h1>Customer creation</h1>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <h3>Cities</h3>
    <ul class="cities" data-prototype="{{form_widget(form.customerCities.vars.prototype)|e('html_attr')}}">
        {# iterate over each existing tag and render its only field: name #}
        {% for city in form.customerCities %}
            <li>{{ city.cityName }}</li>
        {% endfor %}
    </ul>
    <input type="submit" value="Create"/>

    {{ form_end(form) }}

    <li>
        <a href="
        {{ path('admin_customer_index') }}
        ">Back to the list</a>
    </li>
</ul>
<script>
    var $collectionHolder;

    // setup an "add a tag" link
    var $addCityLink = $('<a href="#" class="add_city_link">Add a city</a>');
    var $newLinkLi = $('<li></li>').append($addCityLink);

    jQuery(document).ready(function() {
        // Get the ul that holds the collection of tags
        $collectionHolder = $('ul.cities');

        // add the "add a tag" anchor and li to the tags ul
        $collectionHolder.append($newLinkLi);

        // count the current form inputs we have (e.g. 2), use that as the new index when inserting a new item (e.g. 2)
        $collectionHolder.data('index', $collectionHolder.find(':input').length);

        $addCityLink.on('click', function(e) {
            // prevent the link from creating a "#" on the URL
            e.preventDefault();

            // add a new tag form (see next code block)
            addCityForm($collectionHolder, $newLinkLi);
        });
    });

    function addCityForm($collectionHolder, $newLinkLi) {
        // Get the data-prototype explained earlier
        var prototype = $collectionHolder.data('prototype');

        // get the new index
        var index = $collectionHolder.data('index');

        // Replace '__name__' in the prototype's HTML to instead be a number based on how many items we have
        var newForm = prototype.replace(/__name__/g, index);

        // increase the index with one for the next item
        $collectionHolder.data('index', index + 1);

        // Display the form in the page in an li, before the "Add a tag" link li
        var $newFormLi = $('<li></li>').append(newForm);
        $newLinkLi.before($newFormLi);
    }
</script>

{% endblock %}
