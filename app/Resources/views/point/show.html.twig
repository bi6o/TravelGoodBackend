{% extends 'base.html.twig' %}

{% block body %}
    <h1>Point</h1>

    <table>
        <tbody>
            <tr>
                <th>Logitude</th>
                <td>{{ point.logitude }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ point.latitude }}</td>
            </tr>
            <tr>
                <th>Datearrived</th>
                <td>{% if point.dateArrived %}{{ point.dateArrived|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datedeparted</th>
                <td>{% if point.dateDeparted %}{{ point.dateDeparted|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ point.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_point_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_point_edit', { 'id': point.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
