<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <indexes>
      <index name="idx_b7a5f3249395c3f3" columns="customer_id"/>
      <index name="idx_b7a5f3248bac62af" columns="city_id"/>
  </indexes>
  <entity repository-class="Main\MapBundle\Repository\PointRepository" name="Main\MapBundle\Entity\Point">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <field name="logitude" type="float" column="logitude" precision="10" scale="0" nullable="false"/>
    <field name="latitude" type="float" column="latitude" precision="10" scale="0" nullable="false"/>
    <field name="dateArrived" type="datetime" column="date_arrived" nullable="false"/>
    <field name="dateDeparted" type="datetime" column="date_departed" nullable="false"/>
    <many-to-one field="customer" target-entity="Main\BackendBundle\Entity\Customer" fetch="LAZY">
      <join-columns>
        <join-column name="customer_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="city" target-entity="Main\CityBundle\Entity\AllCities" fetch="LAZY">
      <join-columns>
        <join-column name="city_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
