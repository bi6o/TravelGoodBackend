<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="Main\TripBundle\Repository\TripCityRepository" name="Main\TripBundle\Entity\TripCity">

      <indexes>
          <index name="idx_663915fc028cea2" columns="point_id"/>
          <index name="idx_663915fa5bc2e0e" columns="trip_id"/>
      </indexes>

    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>

    <field name="segment" type="json_array" column="segment" />

    <field name="cityName" type="text" column="city_name" />

    <one-to-one field="point" target-entity="Main\MapBundle\Entity\Point" fetch="LAZY">
        <join-columns>
          <join-column name="point_id" referenced-column-name="id"/>
        </join-columns>
    </one-to-one>

      <many-to-one target-entity="Main\TripBundle\Entity\Trip" field="trip" inversed-by="tripCities">
      </many-to-one>

  </entity>
</doctrine-mapping>
